
public class BankAccount {
	String accountId, holderName;
	double openBal, currentBal;
	static double totalBal;
	static {
		
		totalBal=0;
	}
	public BankAccount(String accountId,String holderName,double openBal) {
		this.holderName=holderName;
		if(openBal>0) {
		this.accountId=accountId;
		this.openBal=openBal;
		this.currentBal=openBal;
		totalBal=totalBal+currentBal;
		System.out.println("Account Created for "+holderName+"under Id "+accountId+"\n");
		
	}
		else
			System.out.println("Account Not created for "+holderName+" Due to insuffiecient Opening Balance! \n");
	}
	public void depositAmount(double amount) {
		
		System.out.println("Amount deposited!");
		currentBal=currentBal+amount;
		totalBal=totalBal+amount;
		displayDetails();
		
	}
	public void withdrawAmount(double amount) {
		
		if(amount<currentBal) {
			System.out.println("Amount withdrawn!");
			currentBal=currentBal-amount;
			totalBal=totalBal-amount;
		}
		
		else
			System.out.println("Invalid withdraw amount!");
		displayDetails();
	}
	
	public static void displayTotalBalance()
	{
		System.out.println("Total Cash in Bank : "+totalBal);
	}
	
	public void displayDetails() {
		System.out.println("ID:"+accountId);
		System.out.println("Name:"+holderName);
		System.out.println("Opening Balance:"+openBal);
		System.out.println("Current Balance:"+currentBal);
		System.out.println();
		
	}
	
	public static void main(String[] args) {
		BankAccount obj1=new BankAccount("ABC123","Rakesh Sen",0);
		BankAccount obj2=new BankAccount("DEF123","Priya Ray",8000);
		BankAccount obj3=new BankAccount("GHI123","Pratik Das",10000);
		BankAccount obj4=new BankAccount("JKL123","Riya Das",6500);
		obj2.withdrawAmount(80000);
		obj3.depositAmount(15000);
		obj4.withdrawAmount(80000);
		BankAccount.displayTotalBalance();
		
		
	}

}
